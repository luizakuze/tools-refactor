#module: satosa.frontends.saml2.SAMLFrontend
module: satosa.frontends.saml2.SAMLMirrorFrontend
name: Mirror
config:
  entityid_endpoint: true
  idp_config:
    organization: {display_name: IdP Proxy GIdLab, name: IdP Proxy GIdLab., url: 'https://gidlab.rnp.br'}
    contact_person:
    - {contact_type: technical, email_address: gidlab@rnp.br, given_name: GIdLab}
    - {contact_type: support, email_address: atendimento@rnp.br, given_name: GIdLab}
    key_file: /satosa/metadata.key
    cert_file: /satosa/metadata.crt
    encryption_keypairs: [
    {
        'key_file': '/satosa/metadata.key',
        'cert_file': '/satosa/metadata.crt'
    }
    ]
    #metadata:
    #  local: [/satosa/plugins/frontends/metadatas/sp2-gidlab.xml]
    #metadata:
    #  remote:
    #    - url: "https://sp-php.cafeexpresso.rnp.br/Shibboleth.sso/Metadata"
    #      cert: null
    #    - url: "https://sp2.gidlab.rnp.br/module.php/saml/sp/metadata.php/default-sp"
    #      cert: null      

    entityid: <base_url>/<name>/proxy
    accepted_time_diff: 60
    service:
      idp:
        endpoints:
          single_sign_on_service: []
        name: Proxy IdP
        ui_info:
          display_name:
            - lang: en
              text: "IdP Proxy GIdLab"
          description:
            - lang: en
              text: "SATOSA Frontend SAML IdP"
          information_url:
            - lang: en
              text: "http://idp.information.url/"
          privacy_statement_url:
            - lang: en
              text: "http://idp.privacy.url/"
          keywords:
            - lang: se
              text: ["Satosa", "IdP-SE"]
            - lang: en
              text: ["Satosa", "IdP-EN"]
          logo:
            text: "http://idp.logo.url/"
            width: "100"
            height: "100"
        name_id_format: ['urn:oasis:names:tc:SAML:2.0:nameid-format:persistent', 'urn:oasis:names:tc:SAML:2.0:nameid-format:transient']
        sign_assertion: true
        sign_response: true
        policy:
          default:
            #sign_alg: "http://www.w3.org/2001/04/xmldsig-more#rsa-sha512"
            #digest_alg: "http://www.w3.org/2001/04/xmlenc#sha256"
            attribute_restrictions: null
            fail_on_missing_requested: false
            lifetime: {minutes: 15}
            name_form: urn:oasis:names:tc:SAML:2.0:attrname-format:uri
            encrypt_assertion: false
            encrypted_advice_attributes: false
  acr_mapping:
    "": default-LoA
    "https://accounts.google.com": LoA1

  endpoints:
    single_sign_on_service:
      'urn:oasis:names:tc:SAML:2.0:bindings:HTTP-POST': sso/post
      'urn:oasis:names:tc:SAML:2.0:bindings:HTTP-Redirect': sso/redirect

  # If configured and not false or empty the common domain cookie _saml_idp will be set
  # with or have appended the IdP used for authentication. The default is not to set the
  # cookie. If the value is a dictionary with key 'domain' then the domain for the cookie
  # will be set to the value for the 'domain' key. If no 'domain' is set then the domain
  # from the BASE defined for the proxy will be used.
  #common_domain_cookie:
  #  domain: .example.com
